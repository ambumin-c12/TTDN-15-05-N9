<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_Chi_Tiet_Cong_Viec_form" model="ir.ui.view">
            <field name="name">Chi_Tiet_Cong_Viec</field>
            <field name="model">Chi_Tiet_Cong_Viec</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Công việc</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ma_dinh_danh"/>
                            <field name="ngay_sinh"/>
                            <field name="que_quan"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_Chi_Tiet_Cong_Viec_tree" model="ir.ui.view">
            <field name="name">Chi_Tiet_Cong_Viec</field>
            <field name="model">Chi_Tiet_Cong_Viec</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_dinh_danh"/>
                    <field name="ngay_tao"/>
                    <field name="noi_lam"/>
                    <field name="so_nguoi"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="Chi_Tiet_Cong_Viec_search">
            <field name="model">Chi_Tiet_Cong_Viec_search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_dinh_danh"/>
                    <field name="ngay_sinh"/>
                    <field name="que_quan"/>
                    <field name="email"/>
                </search>
            </field>
        </record>

        <record id="action_Chi_Tiet_Cong_Viec" model="ir.actions.act_window">
            <field name="name">Công việc</field>
            <field name="res_model">cong_viec</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "cong_viecviec_search"/>
        </record>
    </data>
</odoo>
        
    
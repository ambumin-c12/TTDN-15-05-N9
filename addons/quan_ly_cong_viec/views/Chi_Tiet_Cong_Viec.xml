<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_Chi_Tiet_Cong_Viec_form" model="ir.ui.view">
            <field name="name">Chi_Tiet_Cong_Viec</field>
            <field name="model">chitietcongviec</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">chi tiết công việc</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ma_CTCV"/>
                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="trang_thai"/>
                            <field name="nhan_su"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_Chi_Tiet_Cong_Viec_tree" model="ir.ui.view">
            <field name="name">Chi_Tiet_Cong_Viec</field>
            <field name="model">chitietcongviec</field>
            <field name="arch" type="xml">
                <tree>
                        <field name="ma_CTCV"/>
                        <field name="ngay_bat_dau"/>
                        <field name="ngay_ket_thuc"/>
                        <field name="trang_thai"/>
                        <field name="nhan_su"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="Chi_Tiet_Cong_Viec_search">
            <field name="model">chitietcongviec</field>
            <field name="arch" type="xml">
                <search>
                        <field name="ma_CTCV"/>
                        <field name="ngay_bat_dau"/>
                        <field name="ngay_ket_thuc"/>
                        <field name="trang_thai"/>
                        <field name="nhan_su"/>
                </search>
            </field>
        </record>

        <record id="action_Chi_Tiet_Cong_Viec" model="ir.actions.act_window">
            <field name="name">Công việc</field>
            <field name="res_model">chitietcongviec</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "Chi_Tiet_Cong_Viec_search"/>
        </record>
    </data>
</odoo>
        
    